  // FIXED: Enhanced delete with proper database-first approach
  deletePhoto: async (photoId: string) => {
    try {
      console.log('üóëÔ∏è STORE: Starting photo deletion for ID:', photoId?.slice(-6), 'from', get().photos.length, 'photos');
      
      // Store original photos array for potential rollback
      const originalPhotos = [...get().photos];
      
      // FIRST: Optimistically remove from UI for immediate feedback
      get().removePhotoFromState(photoId);
      console.log('üóëÔ∏è OPTIMISTIC: Removed from UI, now deleting from database');
      
      // First, get the photo to find the storage path
      const { data: photo, error: fetchError } = await supabase
        .from('photos')
        .select('url')
        .eq('id', photoId)
        .maybeSingle(); // FIXED: Use maybeSingle instead of single

      if (fetchError) {
        console.error('‚ùå Error fetching photo for deletion:', fetchError.message);
        
        // Check if this is a "not found" error, which is fine - the photo is already gone
        if (fetchError.code === 'PGRST116' || fetchError.message.includes('0 rows')) {
          console.log('‚úÖ Photo not found in database - already deleted');
          return; // Photo is already gone, our optimistic update was correct
        } else {
          // Real error - rollback the optimistic update
          console.error('‚ùå Rolling back optimistic update due to fetch error');
          set({ photos: originalPhotos });
          throw fetchError;
        }
      }
      
      if (!photo) {
        console.warn('‚ö†Ô∏è Photo not found in database:', photoId);
        // Remove from state since it doesn't exist in DB
        get().removePhotoFromState(photoId);
        return;
      }

      // Extract storage path from URL
      let storagePath = null;
      try {
        const url = new URL(photo.url);
        const pathParts = url.pathname.split('/');
        const storagePathIndex = pathParts.findIndex(part => part === 'photos');
        
        if (storagePathIndex !== -1) {
          storagePath = pathParts.slice(storagePathIndex + 1).join('/');
          console.log('üóëÔ∏è Storage path:', storagePath);
        }
      } catch (urlError) {
        console.warn('‚ö†Ô∏è Could not parse photo URL for storage cleanup:', urlError);
        // Continue with deletion even if we can't parse the URL
      }

      // Delete from database
      const { error: deleteDbError } = await supabase
        .from('photos')
        .delete()
        .eq('id', photoId);

      if (deleteDbError) {
        console.error('‚ùå Database delete error:', deleteDbError.message);
        
        // Check if this is a "not found" error, which is fine
        if (deleteDbError.code === 'PGRST116' || deleteDbError.message.includes('0 rows')) {
          console.log('‚úÖ Photo was already deleted from database');
          // This is fine - photo was already gone, our optimistic update was correct
        } else {
          // Real error - rollback the optimistic update
          console.error('‚ùå Rolling back optimistic update due to delete error');
          set({ photos: originalPhotos });
          throw deleteDbError;
        }
      } else {
        console.log('‚úÖ Photo deleted from database successfully');
      }
     
      // Delete from storage (non-critical)
      if (storagePath) {
        try {
          const { error: deleteStorageError } = await supabase.storage
            .from('photos')
            .remove([storagePath]);
  
          if (deleteStorageError) {
            console.warn('‚ö†Ô∏è Storage delete error (non-fatal):', deleteStorageError.message);
          } else {
            console.log('‚úÖ Photo file deleted from storage');
          }
        } catch (storageError) {
          console.warn('‚ö†Ô∏è Storage delete exception (non-fatal):', storageError);
        }
      }

      console.log('‚úÖ Photo deletion process completed for ID:', photoId);
      console.log('üóëÔ∏è Photos count AFTER deletion:', get().photos.length);
      
    } catch (error: any) {
      console.error('‚ùå Delete photo error:', error);
      
      // Don't throw error for "already deleted" scenarios
      if (error.code === 'PGRST116' || error.message?.includes('0 rows')) {
        console.log('‚úÖ Treating as successful deletion (photo was already gone)');
        return;
      }
      
      throw error;
    }
  }
