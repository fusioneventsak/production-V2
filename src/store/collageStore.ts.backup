  },

  // Enhanced fetchCollages with robust error handling, timeout control, and retry logic
  fetchCollages: async () => {
    // Prevent multiple simultaneous fetch calls
    if (get().loading) {
      console.log('üèôÔ∏è Already loading collages, skipping duplicate request');
      return;
    }

    // Implementation of a timeout + caching strategy:
    // 1. If data was fetched in the last 30 seconds, just return it
    const lastFetchTime = get().lastFetchTime;
    const now = Date.now();
    const CACHE_DURATION = 30 * 1000; // 30 seconds
    
    if (lastFetchTime && now - lastFetchTime < CACHE_DURATION) {
      console.log('üèôÔ∏è Using cached collages (< 30s)');
      return;
    }
    
    // Always set loading state first, but don't clear existing collages 
    // to avoid UI flickering if we already have data
    set(state => ({ 
      loading: true, 
      error: null,
      // Keep existing collages during loading to avoid flickering
      collages: state.collages.length > 0 ? state.collages : []
    }));
    
    // Create a safety timer to prevent infinite loading state
    let safetyTimeoutId: NodeJS.Timeout | undefined;
    safetyTimeoutId = setTimeout(() => {
      console.warn('üèôÔ∏è Fetch collages safety timeout (8s) reached');
      // If we have existing data, just show it and don't display an error
      if (get().collages.length > 0) {
        set({ 
          loading: false,
          error: null // Don't show error if we have data to display
        });
      } else {
        // Only show error if we have no data to display
        set({ 
          loading: false,
          error: 'Request took too long. Please try refreshing the page.'
        });
      }
    }, 8000); // 8 second timeout for faster feedback

    try {
      // Get the authenticated user - using a more reliable approach
      let userId: string | null = null;
      
      // Try to get the session using the direct supabase client method
      try {
        const { data: { session }, error: sessionError } = await supabase.auth.getSession();
        
        if (sessionError) {
          console.error('üèôÔ∏è Session error:', sessionError.message);
        } else if (session?.user?.id) {
          userId = session.user.id;
          console.log('üèôÔ∏è Using active session, user ID:', userId.slice(0, 8));
        }
      } catch (sessionErr) {
        console.warn('üèôÔ∏è Error getting session:', sessionErr);
      }
      
      // If we still don't have a user ID, try the auth.getUser method
      if (!userId) {
        try {
          const { data: { user }, error: userError } = await supabase.auth.getUser();
          
          if (userError) {
            console.error('üèôÔ∏è GetUser error:', userError.message);
          } else if (user?.id) {
            userId = user.id;
            console.log('üèôÔ∏è Using getUser method, user ID:', userId.slice(0, 8));
          }
        } catch (getUserErr) {
          console.warn('üèôÔ∏è Error in getUser:', getUserErr);
        }
      }
      
      // Last resort - try to get from auth store
      if (!userId) {
        try {
          const authStore = await import('../store/authStore');
          const user = authStore?.useAuthStore?.getState?.()?.user;
          if (user?.id) {
            userId = user.id;
            console.log('üèôÔ∏è Using auth store fallback, user ID:', userId.slice(0, 8));
          }
        } catch (authStoreErr) {
          console.error('üèôÔ∏è Auth store fallback failed:', authStoreErr);
        }
      }
      
      if (!userId) {
        console.warn('üèôÔ∏è No authenticated user found through any method');
        set({ error: 'You must be logged in to view your collages', loading: false, collages: [] });
        if (safetyTimeoutId) {
          clearTimeout(safetyTimeoutId);
        }
        return;
      }

      console.log('üèôÔ∏è Fetching collages for user ID:', userId.slice(0, 8));
      
      // Create abort controller for fetch timeout
      const controller = new AbortController();
      const { signal } = controller;
      
      // Set a timeout specifically for this fetch
      const fetchTimeoutId = setTimeout(() => {
        controller.abort();
        console.log('üèôÔ∏è Aborting fetch due to timeout');
      }, 5000); // 5s timeout for the fetch itself
      
      let collages: any[] = [];
      
      try {
        // Get the session for auth token
        const { data: { session } } = await supabase.auth.getSession();
        
        const headers = {
          apikey: import.meta.env.VITE_SUPABASE_ANON_KEY,
          Authorization: `Bearer ${session?.access_token || ''}`,
          'Content-Type': 'application/json'
        };
        
        const endpoint = `${import.meta.env.VITE_SUPABASE_URL}/rest/v1/collages?user_id=eq.${userId}&select=*&order=created_at.desc`;
        console.log('üèôÔ∏è Making REST API call to:', endpoint.split('?')[0]);
        
        const response = await fetch(endpoint, {
          method: 'GET',
          headers,
          signal,
          credentials: 'include'
        });
        
        // Clear fetch timeout as request completed
        clearTimeout(fetchTimeoutId);
        
        // Check for HTTP errors
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        
        // Parse the JSON response
        const data = await response.json();
        
        if (!Array.isArray(data)) {
          throw new Error('Invalid response format. Expected array of collages');
        }
        
        collages = data;
        console.log(`üèôÔ∏è Fetched ${collages.length} collages via REST API`);
        
      } catch (fetchError: unknown) {
        // Clean up timeout if it's still running
        clearTimeout(fetchTimeoutId);
        console.error('üèôÔ∏è REST API fetch failed:', (fetchError as Error).message);
        
        // Fallback: Try direct Supabase query as last resort
        console.log('üèôÔ∏è Trying Supabase client fallback...');
        
        try {
          const { data, error } = await supabase
            .from('collages')
            .select('*')
            .eq('user_id', userId)
            .order('created_at', { ascending: false });
          
          if (error) throw error;
          
          collages = data || [];
          console.log('üèôÔ∏è Fallback fetch successful:', collages.length, 'collages found');
          
        } catch (supabaseError) {
          console.error('üèôÔ∏è Fallback fetch also failed:', supabaseError);
          throw new Error('Failed to fetch collages after multiple attempts');
        }
      }
      
      // Cleanup and update the store with collages
      if (safetyTimeoutId) {
        clearTimeout(safetyTimeoutId);
      }
      
      // Always make sure to reset loading state, even with empty data
      set({ 
        collages: collages as Collage[], 
        loading: false, 
        error: null,
        lastFetchTime: Date.now() // Add timestamp to track when data was last fetched
      });
      
      console.log(`üèôÔ∏è Successfully loaded ${collages.length} collages`);
    } catch (error: any) {
      console.error('üèôÔ∏è Error in fetchCollages:', error);
      
      // Clear any safety timeout if it's still running
      if (safetyTimeoutId) {
        clearTimeout(safetyTimeoutId);
      }
      
      // Update store state when an error occurs
      set({ 
        error: error.message || 'Failed to load collages',
        loading: false
      });
      
      // Implement a retry once after 3 seconds if we have no data and haven't retried recently
      const lastRetry = get().lastRetryTime || 0;
      const now = Date.now();
      const retryDelay = 3000; // 3 seconds before retry
      const retryWindow = 30000; // don't retry more than once every 30 seconds
      
      if (
        get().collages.length === 0 && 
        (now - lastRetry > retryWindow)
      ) {
        console.log('üèôÔ∏è No collages loaded, scheduling a retry in 3 seconds');
        
        // Set retry timestamp
        set({ lastRetryTime: now });
        
        // Schedule a single retry
        setTimeout(() => {
          console.log('üèôÔ∏è Retrying collage fetch...');
          // Recursive call to retry
          get().fetchCollages();
        }, retryDelay);
      }
    }
  }
  },

