          error: 'Collage not found. It may have been deleted or you may not have access to it.', 
          loading: false,
          currentCollage: null 
        });
        return null;
      }

      // Fetch collage settings
      const { data: settings, error: settingsError } = await supabase
        .from('collage_settings')
        .select('*')
        .eq('collage_id', id)
        .maybeSingle();

      if (settingsError) {
        console.warn('Warning: Could not fetch collage settings:', settingsError);
